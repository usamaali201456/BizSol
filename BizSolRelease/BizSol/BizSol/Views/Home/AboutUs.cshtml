                </article>
                <!--comments-->
                <div class="hidden">
                </div>
                <!--comments-->
            </div><!--col-md-8 col-lg-9-->
            <div class="col-md-4 col-lg-3">
                <aside class="sidebar">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-6 match-height">
                            <div class="widget-box">
                                <div class="widget-title"><h4>Latest Ads</h4></div>
                                <div class="widget-content">
                                    @foreach (var ads in Model)
                                    {
                                        <div class="media footer-pr-widget-v1">
                                            <div class="media-left">
                                                <a class="media-img" href="@Url.Action("ViewAd","Ads", new { id = ads.PostId})">
                                                    <img class="media-object" src="@Url.Content(ads.AdsImages.FirstOrDefault().ImagePath)" alt="">
                                                </a>
                                            </div>
                                            <div class="media-body">
                                                <span class="price">
                                                    $@ads.Price
                                                </span>
                                                <h4 class="media-heading">
                                                    <a href="@Url.Action("ViewAd","Ads", new { id = ads.PostId})">@ads.Title</a>
                                                </h4>
                                                <span class="category">
                                                    Category:
                                                    <a href="@Url.Action("ViewAd","Ads", new { id = ads.PostId})">@ads.Category.cat_name</a>
                                                </span>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                </aside><!--sidebar-->
            </div><!--col-md-4 col-lg-3-->
        </div><!--row-->
    </div>
</section>
