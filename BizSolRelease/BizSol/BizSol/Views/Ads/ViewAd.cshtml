<div id="loading-bar" style="display:none;" class="text-center"> <img src="~/Images/reloader.gif" alt="Loader" /> </div>
<style>
    #loading-bar {
        display: none;
        text-align: center;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255,255,0.8);
        background-repeat: no-repeat;
    }
</style>
@section Scripts{
<script>
    function showLoader() {
        $("#loading-bar").show()
        $("#loading-bar").delay(1500).fadeOut("slow");
    };
    function hideLoader() {
        $("#loading-bar").hide();
    }

    if (jQuery('span').hasClass('phNum')) {
        var ph = jQuery('.phNum').text(); var t = ph.slice(3, 20); var cross = '-XXXXX';
        jQuery('.phNum').html(jQuery('.phNum').html().replace(t, cross));
        jQuery('#showNum').on('click', function (event) {
            event.preventDefault();
            jQuery(this).hide(); var older_value = jQuery('this').prev('.phNum').html(); jQuery(this).prev('.phNum').html(jQuery('.phNum').attr('data-replace')).attr('data-replace', older_value);
        });
    }


</script>    
