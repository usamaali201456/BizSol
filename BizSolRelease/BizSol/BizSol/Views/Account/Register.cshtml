@model BizSol.Models.RegisterViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutWithOutSearch.cshtml";
}

@*<link href="~/CustomContant/autoptimize_501b1391d32759aa9d85c3327373f701.css" rel="stylesheet" />*@


<section class="inner-page-content border-bottom top-pad-50">
    <div class="login-register login-register-v1">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 col-sm-12 center-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="classiera-login-register-heading border-bottom text-center">
                                <h3 class="text-uppercase">Register</h3>
                            </div>
                        </div><!--col-lg-12-->
                    </div><!--row-->
                    <div class="row">
                        <div class="col-lg-8 col-sm-11 col-md-9 center-block">

                            <form data-toggle="validator" role="form" id="myform" onclick="location.href'@Url.Action("Register","Account")'" method="POST" enctype="multipart/form-data">

                                @Html.AntiForgeryToken()
                                @if (ViewBag.Status == true)
                                {

                                    <div class="alert alert-success" style="text-align:center;margin-left:15%">
                                        @ViewBag.Message
                                    </div>
                                }
                                <!--Username-->
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-3 single-label">

                                            <label for="username">
                                                User Name :
                                                <span class="text-danger">*</span>
                                            </label>
                                        </div>
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input type="text" id="fname" name="UserName" value="@Model.UserName" class="form-control form-control-md" placeholder="Enter Username" data-error="username required">
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Username-->
                                <!--Last Nmae-->
                                <!--Last Nmae-->
                                <!--EmailAddress-->
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-3 single-label">
                                            <label for="email">Email Address : <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input id="email" type="email" name="Email" value="@Model.Email" class="form-control form-control-md sharp-edge" placeholder="example@example.com" data-error="Email required">
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                @*@Html.ValidationMessage("EmailExist", new { @class = "text-danger" })*@
                                                @*<div class="help-block with-errors"></div>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--EmailAddress-->
                                <!--Contact-->
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-3 single-label">
                                            <label for="email">Contact : <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input id="contact" type="number" maxlength="11" value="@Model.Contact" name="Contact" class="form-control form-control-md sharp-edge" placeholder="03xxxxxxxxx" data-error="Contact required">
                                                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                                                @*@Html.ValidationMessage("NumberExist", new { @class = "text-danger" })*@
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Contact-->
                                <!--Password-->
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-3 single-label">
                                            <label for="registerPass">Password : <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input type="password" name="Password" value="@Model.Password" data-minlength="5" class="form-control form-control-md sharp-edge" placeholder="enter password" id="registerPass" data-error="password required">
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                <div class="help-block">Minimum of 6 characters</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 col-sm-3 single-label">
                                            <label for="confirmPass">Confirm password : <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-lg-9 col-sm-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input id="confirmPass" type="password" value="@Model.ConfirmPassword" name="ConfirmPassword" class="form-control form-control-md sharp-edge" placeholder="re-enter password" data-match="#registerPass" data-match-error="Whoops, these dont match">
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                @*<div class="help-block with-errors"></div>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Password-->
                                <!--terms-->
                                <div class="col-lg-9 col-sm-9 pull-right flip">

                                    <div class="form-group">
                                        <input type="hidden" name="submit" value="Register" id="submit" />
                                        <button type="submit" name="op" class="btn btn-primary sharp btn-md btn-style-one">Register now</button>
                                    </div>
                                    <div class="form-group">
                                        <p>Already have account? <a href="@Url.Action("Login","Account")">Login here</a></p>
                                    </div>
                                </div>
                                <!--terms-->
                            </form>
                        </div><!--col-lg-8-->
                    </div><!--row-->
                </div><!--col-lg-10-->
            </div><!--row-->
        </div><!--container-->
    </div><!--login-register-->
</section>

























