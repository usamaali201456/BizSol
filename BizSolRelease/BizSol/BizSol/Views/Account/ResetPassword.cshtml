@model BizSol.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutWithOutSearch.cshtml";

}

<section class="inner-page-content border-bottom top-pad-50">
    <div class="login-register login-register-v1">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-11 col-sm-12 center-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="classiera-login-register-heading border-bottom text-center">
                                <h3 class="text-uppercase">Reset Password</h3>
                            </div><!--classiera-login-register-heading-->

                        </div><!--col-lg-12-->
                    </div><!--row-->
                    <div class="row">
                        <div class="col-lg-8 center-block">
                            <form data-toggle="validator" role="form" method="POST" onclick="location.href'@Url.Action("ResetPassword","Account")'" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Code)
                                @if (ViewBag.Message != null)
                                {

                                    <div class="alert alert-danger" style="text-align:center;margin-left:15%">
                                        @ViewBag.Message
                                    </div>
                                }
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 single-label">
                                            <label for="oldpasword">Old Password : <span class="text-danger">*</span></label>
                                        </div><!--col-lg-3-->
                                        <div class="col-lg-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input type="password" id="oldPassword" name="OldPassword" class="form-control form-control-md sharp-edge" required>
                                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div><!--col-lg-9-->
                                    </div><!--row-->
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 single-label">
                                            <label for="newpassword">New Password : <span class="text-danger">*</span></label>
                                        </div><!--col-lg-3-->
                                        <div class="col-lg-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input type="password" id="newpassword" name="NewPassword" class="form-control form-control-md sharp-edge"required>
                                                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div><!--col-lg-9-->
                                    </div><!--row-->
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3 single-label">
                                            <label for="confirmpassword">Confirm Password : <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-lg-9">
                                            <div class="inner-addon left-addon">
                                                <i class="left-addon form-icon fa fa-lock"></i>
                                                <input id="confirmpassword" type="password" name="ConfirmPassword" @*name="@Model.Password"*@ class="form-control form-control-md sharp-edge" required>
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                                <div class="help-block with-errors"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div><!--Password-->
                                <div class="col-lg-9 pull-right flip">

                                    <div class="form-group">
                                        @*<input type="hidden" id="submitbtn" name="submit" value="Reset" />
        <button class="btn btn-primary sharp btn-md btn-style-one" id="edit-submit" name="op" value="Login" type="submit">RESET</button>*@
                                        <button type="submit" name="op" value="update_profile" class="btn btn-primary sharp btn-sm btn-style-one">Submit</button>
                                    </div>

                                </div><!--Rememberme-->
                            </form>
                        </div><!--col-lg-8-->
                    </div><!--row-->
                </div><!--col-lg-10-->
            </div><!--row-->
        </div><!--container-->
    </div><!--login-register login-register-v1-->
</section>










